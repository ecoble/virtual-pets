<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.geometry.Insets?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml/1" fx:id="shopBox" visible="false" managed="false">
    <HBox>
        <Button fx:id="buyFoodButton" onMouseClicked="#buyFood" text="Buy food"/>
        <padding>
            <Insets bottom="15.0"/>
        </padding>
    </HBox>

    <HBox alignment="CENTER">
        <Button fx:id="cancelButton" onMouseClicked="#cancel" text="Cancel"/>
    </HBox>

</fx:root>