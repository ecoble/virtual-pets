<?import javafx.scene.image.ImageView?>
        <?import javafx.scene.image.Image?>
        <?import javafx.scene.Group?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<fx:root type="javafx.scene.layout.VBox" fx:id="VBox" xmlns:fx="http://javafx.com/fxml/1">
    <StackPane>
        <ImageView fx:id="backgroundImage" fitWidth="650" fitHeight="425">
            <image>
                <Image url="@../../../images/shower.jpg"/>
            </image>
        </ImageView>
        <Group StackPane.alignment="CENTER">
            <HBox fx:id="petContainer">
            </HBox>
        </Group>
    </StackPane>

    <StackPane>
        <Text fx:id="userMessage"/>
        <padding>
            <Insets top="20.0" bottom="40.0"/>
        </padding>
    </StackPane>

    <HBox fx:id="menu" alignment="center">
        <Button fx:id="continueWash" onMouseClicked="#continueWash" text="Continue Washing"></Button>
        <Button fx:id="finishWash" onMouseClicked="#finishWash" text="Finish Washing"></Button>
    </HBox>

</fx:root>